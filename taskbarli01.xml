<?xml version="1.0" encoding="utf-8"?>
<LayoutModificationTemplate Version="1" xmlns="http://schemas.microsoft.com/Start/2014/LayoutModification">
    <CustomTaskbarLayoutCollection PinListPlacement="Replace">
        <defaultlayout:TaskbarLayout xmlns:defaultlayout="http://schemas.microsoft.com/Start/2014/TaskbarLayout">
            <taskbar:TaskbarPinList>
                <!-- Pin File Explorer -->
                <taskbar:DesktopApp DesktopApplicationLinkPath="%SystemRoot%\\explorer.exe" />

                <!-- Pin Outlook -->
                <taskbar:DesktopApp DesktopApplicationLinkPath="%ProgramFiles%\\Microsoft Office\\root\\Office16\\OUTLOOK.EXE" />

                <!-- Pin Teams -->
                <taskbar:DesktopApp DesktopApplicationLinkPath="%APPDATA%\\Microsoft\\Windows\\Start Menu\\Programs\\Microsoft Teams.lnk" />
            </taskbar:TaskbarPinList>
        </defaultlayout:TaskbarLayout>
    </CustomTaskbarLayoutCollection>
</LayoutModificationTemplate>
